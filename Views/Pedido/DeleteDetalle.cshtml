@{
    ViewData["Title"] = "DeleteDetalle";
}

@model PedidoDetalle

<h2>Eliminar detalle del pedido</h2>
<div>
    <h4>Detallee del pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Pedido Detalle ID</dt>
        <dt class="col-sm-10">@Model.PedidoDetalleId</dt>

        <dt class="col-sm-2">Cantidad</dt>
        <dt class="col-sm-10">@Model.Cantidad</dt>

        <dt class="col-sm-2">Precio</dt>
        <dt class="col-sm-10">@Model.Producto.Precio</dt>

        <dt class="col-sm-2">Producto</dt>
        <dt class="col-sm-10">@Model.Producto.Nombre</dt>

    </dl>

    <form asp-action="DeleteDetalle" asp-route-id="@Model.PedidoDetalleId" method="post">
        <div class="form-actions">
            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
            <a asp-action="Details" asp-route-id="@Model.PedidoId" class="btn btn-secondary btn-sm">Volver</a>
        </div>
    </form>
</div>
